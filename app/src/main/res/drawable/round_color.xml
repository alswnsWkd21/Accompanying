<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

<lockItem android:state_pressed="true" android:state_focused="true">
    <shape>
        <solid android:color="#6DD9FF"/>
        <stroke
            android:width="2.3dp"
            android:color="#6DD9FF" />
         <corners
            android:radius="15dp" />
    </shape>
</lockItem>

<lockItem android:state_pressed="true" android:state_focused="false">
    <shape>
        <solid android:color="#6DD9FF"/>
        <stroke
            android:width="2.3dp"
            android:color="#6DD9FF" />
        <corners
            android:radius="15dp" />
    </shape>
</lockItem>

<lockItem android:state_pressed="false" android:state_focused="true">
    <shape>
        <solid android:color="#6DD9FF"/>
        <stroke
            android:width="2.3dp"
            android:color="#6DD9FF" />
        <corners
            android:radius="15dp" />                          
    </shape>
</lockItem>

<lockItem android:state_pressed="false" android:state_focused="false">
    <shape>
        <gradient 
            android:startColor="#6DD9FF"
            android:centerColor="#6DD9FF"
            android:endColor="#6DD9FF"
            android:angle="270"
        />
        <stroke
            android:width="0.7dp"                
            android:color="#6DD9FF" />
        <corners
            android:radius="15dp" />            
    </shape>
</lockItem>

<lockItem android:state_enabled="true">
    <shape>
        <padding 
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp"
            />
    </shape>
</lockItem>

</selector>