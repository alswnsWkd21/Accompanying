<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:id="@+id/activity_selective"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:gravity="center"
        tools:context="smc.minjoon.accompanying.MainAccompanyButton.Reservation.AccompanySelectActivity">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/selective"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="20dp"
            android:text="긴급"
            android:textSize="20dp"
            android:textColor="#fff"
            android:background="@drawable/round_helper"
            android:id="@+id/emergencybtn" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="20dp"
            android:textColor="#fff"
            android:textSize="20dp"
            android:background="@drawable/round_disabled"
            android:text="예약"
            android:id="@+id/reservationbtn" />
    </LinearLayout>