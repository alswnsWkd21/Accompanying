<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_list_clicked"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="smc.minjoon.accompanying.MainAccompanyButton.Reservation.HelperReservation.ListClickedActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="아이디"
            android:layout_margin="5dp"
            android:textSize="17dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="17dp"
            android:text="아이디입니다"
            android:layout_margin="5dp"
            android:id="@+id/tv_id"
            android:background="@drawable/textview"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="날짜"
            android:layout_margin="5dp"
            android:textSize="17dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="날짜입니다"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:background="@drawable/textview"
            android:textSize="17dp"
            android:id="@+id/tv_date"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="시간"
            android:layout_margin="5dp"
            android:textSize="17dp"        />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="시간입니다"
            android:layout_margin="5dp"
            android:textSize="17dp"
            android:padding="10dp"
            android:background="@drawable/textview"
            android:id="@+id/tv_time"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="장소"
            android:layout_margin="5dp"
            android:textSize="17dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="장소입니다."
            android:layout_margin="5dp"
            android:padding="10dp"
            android:background="@drawable/textview"
            android:textSize="17dp"
            android:id="@+id/tv_place"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="내용"
            android:textSize="17dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="내용입니다."
            android:layout_margin="5dp"
            android:padding="10dp"
            android:background="@drawable/textview"
            android:textSize="17dp"
            android:id="@+id/tv_content"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="9">
        <Button
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:textColor="#fff"
            android:textSize="15dp"
            android:layout_weight="1"
            android:background="@drawable/newbg_06"
            android:id="@+id/reservationCancle"
            android:text="취소하기"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:textColor="#fff"
            android:textSize="15dp"
            android:layout_weight="1"
            android:background="@drawable/newbg_06"
            android:id="@+id/reservationChatting"
            android:text="채팅하기"/>

    </LinearLayout>

</LinearLayout>
