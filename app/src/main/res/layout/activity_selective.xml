<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_selective"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:gravity="center"
    tools:context="smc.minjoon.accompanying.Login.SelectiveActivity">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:src="@drawable/selective"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="20dp"
        android:text="도우미로그인"
        android:contentDescription="도우미 로그인"
        android:textSize="20dp"
        android:textColor="#fff"
        android:background="@drawable/round_helper"
        android:id="@+id/helperbtn" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="20dp"
        android:textColor="#fff"
        android:textSize="20dp"
        android:contentDescription="장애인 로그인"
        android:background="@drawable/round_disabled"
        android:text="장애인로그인"
        android:id="@+id/disabledbtn" />

    <Button
        android:id="@+id/freepassbtn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="20dp"
        android:background="@drawable/none_login"
        android:contentDescription="로그인 없이 입장"
        android:text="로그인 없이 입장"
        android:textColor="#fff"
        android:textSize="20dp" />
</LinearLayout>
