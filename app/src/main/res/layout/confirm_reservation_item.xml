            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/reservationTime"
            android:text="시간"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/reservationPlace"
            android:text="장소"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/reservationWork"
            android:singleLine="true"
            android:text="할일"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/h_id"
            android:text="상태"/>
