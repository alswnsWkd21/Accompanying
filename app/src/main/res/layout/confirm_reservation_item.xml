            android:layout_height="wrap_content"
            android:id="@+id/reservationID"
            android:visibility="gone"
            android:text="아이디"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/reservationDate"
            android:text="날짜"/>
